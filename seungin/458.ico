<div id="answer-4236918" class="answer" data-answerid="4236918"   itemscope itemtype="http://schema.org/Answer">
    <div class="post-layout">
            <div class="votecell post-layout--left">
                

<div class="vote">
        <input type="hidden" name="_id_" value="4236918">
        <a class="vote-up-off" title="This answer is useful">up vote</a>
        <span itemprop="upvoteCount" class="vote-count-post ">51</span>
